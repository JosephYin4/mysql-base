{{#extends "base"}}
{{#block "content"}}
<h1>Payment Section</h1>
<table class="table">
    <tr>
        <th>Payment ID</th>
        <th>Type of Payment</th>
        <th>Date Paid</th>
        <th>Receiver Name</th>
        <th>Payment Invoice Number</th>
        <th>Remarks</th>
        <th>Payer UserID</th>
        <th>Tenancy ID</th>
        <th></th>
    </tr>
    {{#each payment}}
    <tr>
        <td>{{paymentID}}</td>
        <td>{{typeofPayment}}</td>
        <td>{{datePaid}}</td>
        <td>{{receiverName}}</td>
        <td>{{paymentInvoiceNumber}}</td>
        <td>{{remarks}}</td>
        <td>{{userID}}</td>
        <td>{{tenancyID}}</td>
    </tr>
    {{/each}}
</table>
{{/block}}
{{/extends}}