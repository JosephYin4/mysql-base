    <div class="mb-3">
        <label>Type of Payment</label>
        <input type="text" 
               class="form-control" 
               name="typeofPayment"
               value="{{payment1.typeofPayment}}"/>
    </div>
    <div class="mb-3">
        <label>Date Paid</label>
        <input type="date" 
               class="form-control" 
               name="datePaid"
               value="{{payment1.datePaid}}"
               />
    </div>
        <div class="mb-3">
        <label>Amount Paid</label>
        <input type="number" 
               class="form-control" 
               name="amountPaid"
