               />
    </div>
    <div class="mb-3">
        <label>Receiver Name</label>
        <input type="text" 
               class="form-control" 
               name="receiverName"
               value="{{payment1.receiverName}}"
               />
    </div>
        <div class="mb-3">
        <label>Payment Invoice Number</label>
        <input type="text" 
               class="form-control" 
               name="paymentInvoiceNumber"
               value="{{payment1.paymentInvoiceNumber}}"
               />
    </div>
    <div class="mb-3">
        <label>Remarks</label>
        <input type="text" 
               class="form-control" 
               name="remarks"
               value="{{payment1.remarks}}"
               />
    </div>
    <div class="mb-3">
        <label>Payer UserID</label>
        <input type="number" 
               class="form-control" 
               name="userID"
               value="{{payment1.userID}}"
               />
    </div>
    <div class="mb-3">
        <label>Tenancy ID</label>
        <input type="number" 
               class="form-control" 
               name="tenancyID"
               value="{{payment1.tenancyID}}"
               />
