{{#extends "base"}}

{{#block "title"}}Delete Issue{{/block}}

{{#block "content"}}
<form method="POST">
    <div class="alert alert-danger">
        Are you sure you want to delete Issue with ID {{issueId.issueID}}?
        <div>
            <input type="submit" value="Confirm" class="btn btn-danger"/>
            <a href="/issue" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

{{/block}}

