        <div class="mb-3">
        <label>Deposit Amount</label>
        <input type="number" 
               class="form-control" 
               name="depositAmount"
               value="{{tenancydetail1.depositAmount}}"
               />
    </div>
    <div class="mb-3">
        <label>Subtenants FullNames</label>
        <input type="text" 
               class="form-control" 
               name="subtenantsFullName"
               value="{{tenancydetail1.subtenantsFullName}}"
               />
    </div>
    <div class="mb-3">
        <label>Property ID</label>
        <input type="number" 
               class="form-control" 
               name="propertyID"
               value="{{tenancydetail1.propertyID}}"
               />
    </div>
    <div class="mb-3">
        <label>User ID</label>
        <input type="number" 
               class="form-control" 
               name="userID"
               value="{{tenancydetail1.userID}}"
               />
