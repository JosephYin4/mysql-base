{{#extends "base"}}
{{#block "content"}}
<h1>Dashboard</h1>
<table class="table">
    <tr>
        <th>User ID</th>
        <th>Type of User</th>
        <th>FullName</th>
        <th>Contact Number</th>
        <th>Email</th>
    </tr>
    {{#each dashboard}}
    <tr>
        <td>{{userID}}</td>
        <td>{{typeofUser}}</td>
        <td>{{fullName}}</td>
        <td>{{contactNumber}}</td>
        <td>{{email}}</td>
        <td>
                <a href="/userdetail/{{userID}}/edit" class="btn btn-primary btn-sm">Edit</a>
                <a href="/userdetail/{{userID}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>
{{/block}}
{{/extends}}